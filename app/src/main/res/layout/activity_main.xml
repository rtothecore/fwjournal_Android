<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/mainWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/IvHome"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:src="@drawable/homeicon_n" />
            <ImageView
                android:id="@+id/IvSearch"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:src="@drawable/searchicon_n" />
            <ImageView
                android:id="@+id/IvPredict"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:src="@drawable/prediction_n" />
            <ImageView
                android:id="@+id/IvStat"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:src="@drawable/statisticsicon_n" />
            <ImageView
                android:id="@+id/IvSet"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.5"
                android:src="@drawable/seticon_n" />

        </LinearLayout>
        <!-- https://material.io/design/components/bottom-navigation.html# -->
        <!-- https://thdev.tech/androiddev/2016/12/16/Android-BottomNavigationView-Intro.html -->
        <!--
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@color/colorItemIconTint"
            app:itemTextColor="@color/colorItemIconTint"
            app:layout_behavior="tech.thdev.app.view.BottomNavigationBehavior"
            app:menu="@layout/bottom_navigation_menu" />
         -->

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>